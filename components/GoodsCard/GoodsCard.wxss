/* components/GoodsCrad/GoodsCard.wxss */
.goods-crad-box {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.goods-crad-box navigator {
  width: 100%;
  font-family: 28rpx;
}
.goods-crad-box navigator image {
  width: 100%;
}
.goods-crad-box .goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-crad-box .goods-bottom .goods-unit {
  color: #f05423;
}
.goods-crad-box .goods-bottom .goods-price {
  color: #f05423;
  font-size: 32rpx;
  font-weight: 500;
}
.goods-crad-box .goods-bottom .add-cart {
  width: 60rpx;
}
