/* pages/user/index.wxss */
page {
  background-color: #edece8;
}
.user-info-wrap {
  position: relative;
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
}
.user-info-wrap .user-img-wrap {
  position: relative;
}
.user-info-wrap .user-img-wrap .user-bg {
  width: 100%;
  height: 45vh;
  filter: blur(10rpx);
}
.user-info-wrap .user-img-wrap .user-info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user-info-wrap .user-img-wrap .user-info .user-icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user-info-wrap .user-img-wrap .user-info .user-name {
  color: #fff;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.user-info-wrap .user-btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid var(--themeColor);
  color: var(--themeColor);
  font-size: 38rpx;
}
.user-content {
  position: relative;
}
.user-content .user-main {
  position: absolute;
  width: 90%;
  top: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  padding-bottom: 100rpx;
  color: #666;
}
.user-content .user-main .history-wrap {
  display: flex;
  background-color: #fff;
}
.user-content .user-main .history-wrap navigator {
  flex: 1;
  padding: 10rpx 0;
  text-align: center;
}
.user-content .user-main .history-wrap navigator .his-num {
  color: var(--themeColor);
}
.user-content .user-main .orders-wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.user-content .user-main .orders-wrap .orders-title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user-content .user-main .orders-wrap .order-content {
  display: flex;
}
.user-content .user-main .orders-wrap .order-content navigator {
  padding: 15rpx;
  flex: 1;
  text-align: center;
}
.user-content .user-main .orders-wrap .order-content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.user-content .user-main .orders-wrap .order-content navigator .order-name {
  color: #666;
}
.user-content .user-main .address-wrap {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #fff;
}
.user-content .user-main .app-info-wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.user-content .user-main .app-info-wrap .app-info-item {
  padding: 20rpx;
  border: 1rpx solid #ccc;
}
.user-content .user-main .app-info-wrap .app-info-contact {
  display: flex;
  justify-content: space-between;
}
.user-content .user-main .recommend-wrap {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #fff;
}
